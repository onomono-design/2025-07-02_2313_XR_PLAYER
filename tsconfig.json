{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/data/*": ["./data/*"],
      "@/styles/*": ["./styles/*"]
    }
  },
  "include": ["*.tsx", "components/**/*.ts", "components/**/*.tsx", "main.tsx", "App.tsx"],
  "exclude": ["node_modules", "dist", "build", "*.config.ts", "*.config.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
} 